@model TickBox.Web.Models.Taxonomy.TaxonomyEditViewModel
@{
    ViewBag.Title = "Edit";
}
@section PageHeader
{
    <h2>
        Edit Taxonomy Details
    </h2>
}
@using (Html.BeginForm("Edit", "Taxonomy", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Taxonomy {ID: @Model.TaxonomyId}</legend>
        @Html.HiddenFor(model => model.TaxonomyId)
        <div class="editor-label">
            @Html.LabelFor(model => model.AvailableTemplates)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.TemplateId, Model.AvailableTemplates, new {value = Model.TemplateId})
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AvailableSpecialisms)
        </div>
        <div class="editor-field">
            <table>
                <thead>
                <tr>
                    <th>
                        Link
                    </th>
                    <th>
                        Specialism Name:
                    </th>
                </tr>
                </thead>
                <tbody>
                @Html.EditorFor(m => m.AvailableSpecialisms)
                </tbody>
            </table>
        </div>
        <p>
            <input type="submit" value="Save"/>
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back", "Index", "Home")
</div>