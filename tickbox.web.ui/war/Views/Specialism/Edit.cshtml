@model TickBox.Web.Models.Specialism.SpecialismViewModel

@{
    ViewBag.Title = "Edit";
}
@section PageHeader
{
    <h2>
        Edit Specialism Details</h2>
}
@using (Html.BeginForm("Edit","Specialism",FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Specialism {ID: @Model.SpecialismId}</legend>

        @Html.HiddenFor(model => model.SpecialismId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SpecialismTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SpecialismTitle)
            @Html.ValidationMessageFor(model => model.SpecialismTitle)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Index","Home")
</div>
