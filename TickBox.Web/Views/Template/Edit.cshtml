@model TickBox.Web.Models.Template.TemplateViewModel
@{
    ViewBag.Title = "Edit";
}
@section PageHeader
{
    <h2>
        Edit Template Details</h2>
}
@using (Html.BeginForm("Edit", "Template", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Template {ID: @Model.TemplateId}</legend>
        @Html.HiddenFor(model => model.TemplateId)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DocumentLink)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DocumentLink)
            @Html.ValidationMessageFor(model => model.DocumentLink)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back", "Index","Home")
</div>
